{
    "name": "rsschool-ui",
    "version": "0.0.1",
    "description": "UI for rsschool",
    "browserslist": [
        "chrome 45",
        "chrome 49",
        "chrome >= 61",
        "firefox >= 56",
        "ie >= 11",
        "safari >= 9",
        "edge >= 14"
    ],
    "scripts": {
        "start": "better-npm-run dev",
        "build": "better-npm-run build",
        "test": "jest",
        "lint": "tslint -c tslint.json --project tsconfig.json",
        "pretty": "prettier --config .prettierrc.json --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
        "storybook": "start-storybook -p 6006",
        "storybook:build": "build-storybook -c .storybook -o ./dist/storybook"
    },
    "betterScripts": {
        "dev": {
            "command": "webpack-dev-server --hot",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "build": {
            "command": "webpack --display-chunks --progress",
            "env": {
                "NODE_ENV": "production"
            }
        }
    },
    "devDependencies": {
        "@storybook/addon-actions": "4.0.0-alpha.7",
        "@storybook/addon-info": "4.0.0-alpha.7",
        "@storybook/addon-options": "4.0.0-alpha.7",
        "@storybook/addons": "4.0.0-alpha.7",
        "@storybook/react": "4.0.0-alpha.7",
        "@types/classnames": "2.2.3",
        "@types/jest": "22.2.3",
        "@types/node": "8.0.47",
        "@types/react": "16.3.14",
        "@types/react-dom": "16.0.5",
        "@types/react-hot-loader": "4.1.0",
        "@types/react-redux": "5.0.12",
        "@types/react-router-dom": "4.2.6",
        "@types/react-router-redux": "5.0.14",
        "@types/storybook__react": "3.0.7",
        "awesome-typescript-loader": "5.0.0",
        "better-npm-run": "0.1.0",
        "clean-webpack-plugin": "0.1.19",
        "copy-webpack-plugin": "4.5.1",
        "css-loader": "0.28.11",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "html-webpack-plugin": "3.2.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "23.0.0",
        "node-sass": "4.9.0",
        "prettier": "1.12.1",
        "react-docgen-typescript-webpack-plugin": "^1.1.0",
        "sass-loader": "7.0.1",
        "style-loader": "0.21.0",
        "ts-jest": "22.4.6",
        "tslint": "5.10.0",
        "tslint-react": "3.6.0",
        "typescript": "2.8.3",
        "webpack": "4.8.3",
        "webpack-cli": "2.1.4",
        "webpack-dev-server": "3.1.4",
        "webpack-merge": "4.1.2"
    },
    "dependencies": {
        "axios": "0.18.0",
        "bootstrap": "4.1.1",
        "classnames": "2.2.5",
        "core-js": "2.5.6",
        "history": "4.7.2",
        "react-dom": "16.3.2",
        "react-hot-loader": "3.1.1",
        "react-redux": "5.0.7",
        "react-router-dom": "4.2.2",
        "react-router-redux": "5.0.0-alpha.8",
        "react": "16.3.2",
        "redux-devtools-extension": "2.13.2",
        "redux-saga": "0.16.0",
        "redux": "3.7.2"
    },
    "jest": {
        "globals": {
            "DEBUG": false,
            "userAgent": "nodejs",
            "__JEST__": true
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleDirectories": [
            "node_modules",
            "./src/app"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleNameMapper": {
            "^.+\\.(css|scss)$": "identity-obj-proxy"
        },
        "testMatch": [
            "**/*.test.(ts|tsx)"
        ]
    }
}
