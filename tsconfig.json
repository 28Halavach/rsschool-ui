{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "lib": [
      "dom",
      "es6",
      "es2017"
    ],
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "react": [
        "node_modules/@types/react"
      ]
    }
  }
}
